<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.begin.BeginGameFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/game_bckgr"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/btnPravila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/btn_rules"
        android:layout_margin="20dp"
        />

    <ImageView
        android:id="@+id/btnNastroiki"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/btnPravila"
        app:layout_constraintBottom_toBottomOf="@id/btnPravila"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/btn_settings"
        android:layout_marginEnd="20dp"
        />

    <ImageView
        android:id="@+id/dragon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/dragon_green"
        android:scaleType="center"
        />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/raptor_flight"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="@id/dragon"
        app:layout_constraintBottom_toTopOf="@id/dragon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/oregano_regular"
        />

    <TextView
        android:id="@+id/tvAppName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/raptor_flight"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="@id/dragon"
        app:layout_constraintBottom_toTopOf="@id/dragon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/oregano_regular"
        />

    <TextView
        android:id="@+id/tvAppName3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/raptor_flight"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="@id/dragon"
        app:layout_constraintBottom_toTopOf="@id/dragon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/oregano_regular"
        />

    <TextView
        android:id="@+id/tvAppName4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/raptor_flight"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintTop_toTopOf="@id/dragon"
        app:layout_constraintBottom_toTopOf="@id/dragon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/oregano_regular"
        />

    <ImageView
        android:id="@+id/btnBegin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dragon"
        app:layout_constraintBottom_toTopOf="@id/btnFinish"
        android:src="@drawable/btn_start"
        android:layout_marginBottom="15dp"
        />

    <ImageView
        android:id="@+id/btnFinish"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBegin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/btn_exit"
        android:layout_marginBottom="50dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
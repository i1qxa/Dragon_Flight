<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.game.GameFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/game_bckgr"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/button_back"
        />

    <ImageView
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/btn_settings"
        />

    <ImageView
        android:id="@+id/ivScoreBckgr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toTopOf="@id/tvScore"
        app:layout_constraintBottom_toBottomOf="@id/tvScoreValue"
        android:src="@drawable/clock_bckgr"

        />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        android:text="@string/score"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvScore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        android:text="@string/score"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvScore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        android:text="@string/score"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvScore4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        android:text="@string/score"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvScoreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toBottomOf="@id/tvScore"
        android:text="0"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvScoreValue2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toBottomOf="@id/tvScore"
        android:text="0"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvScoreValue3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toBottomOf="@id/tvScore"
        android:text="0"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvScoreValue4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toStartOf="@id/btnSettings"
        app:layout_constraintTop_toBottomOf="@id/tvScore"
        android:text="0"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingHorizontal="10dp"
        />

    <ImageView
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/btn_left"
        />

    <ImageView
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/btn_right"
        />

    <ImageView
        android:id="@+id/ivTimerBckgr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/ivScoreBckgr"
        app:layout_constraintEnd_toEndOf="@id/ivScoreBckgr"
        app:layout_constraintTop_toTopOf="@id/tvTimer"
        app:layout_constraintBottom_toBottomOf="@id/tvTimer"
        android:src="@drawable/clock_bckgr"
        />

    <ImageView
        android:id="@+id/ivClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ivTimerBckgr"
        app:layout_constraintTop_toTopOf="@id/btnLeft"
        app:layout_constraintBottom_toBottomOf="@id/btnLeft"
        android:src="@drawable/clock"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivClock"
        app:layout_constraintEnd_toEndOf="@id/ivTimerBckgr"
        app:layout_constraintTop_toTopOf="@id/btnLeft"
        app:layout_constraintBottom_toBottomOf="@id/btnLeft"
        android:text="00:22"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvTimer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivClock"
        app:layout_constraintEnd_toEndOf="@id/ivTimerBckgr"
        app:layout_constraintTop_toTopOf="@id/btnLeft"
        app:layout_constraintBottom_toBottomOf="@id/btnLeft"
        android:text="00:22"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvTimer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivClock"
        app:layout_constraintEnd_toEndOf="@id/ivTimerBckgr"
        app:layout_constraintTop_toTopOf="@id/btnLeft"
        app:layout_constraintBottom_toBottomOf="@id/btnLeft"
        android:text="00:22"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingHorizontal="10dp"
        />

    <TextView
        android:id="@+id/tvTimer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivClock"
        app:layout_constraintEnd_toEndOf="@id/ivTimerBckgr"
        app:layout_constraintTop_toTopOf="@id/btnLeft"
        app:layout_constraintBottom_toBottomOf="@id/btnLeft"
        android:text="00:22"
        android:fontFamily="@font/oregano_regular"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:paddingHorizontal="10dp"
        />

    <ImageView
        android:id="@+id/item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btnLeft"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:src="@drawable/ruby"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btnLeft"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        />
    <ImageView
        android:id="@+id/item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btnLeft"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        />
    <ImageView
        android:id="@+id/item4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btnLeft"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        />
    <ImageView
        android:id="@+id/item5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btnLeft"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        />
    <ImageView
        android:id="@+id/item6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btnLeft"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        />

    <ImageView
        android:id="@+id/dragon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLeft"
        android:src="@drawable/dragon"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
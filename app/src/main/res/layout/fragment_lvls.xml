<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.lvls.LvlsFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/game_bckgr"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/button_back"
        />

    <TextView
        android:id="@+id/tvLvlsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="40dp"
        android:text="@string/levels"
        style="@style/tv_header" />

    <TextView
        android:id="@+id/tvLvlsHeader2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="40dp"
        android:text="@string/levels"
        style="@style/tv_header" />

    <TextView
        android:id="@+id/tvLvlsHeader3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="40dp"
        android:text="@string/levels"
        style="@style/tv_header" />

    <TextView
        android:id="@+id/tvLvlsHeader4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="40dp"
        android:text="@string/levels"
        style="@style/tv_header" />

    <TextView
        android:id="@+id/lvl1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lvl2"
        app:layout_constraintTop_toBottomOf="@id/tvLvlsHeader"
        app:layout_constraintBottom_toTopOf="@id/lvl4"
        android:text="1"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_complete"
        android:layout_marginStart="30dp"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/lvl1"
        app:layout_constraintEnd_toStartOf="@id/lvl3"
        app:layout_constraintTop_toBottomOf="@id/tvLvlsHeader"
        app:layout_constraintBottom_toTopOf="@id/lvl4"
        android:text="2"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:layout_marginStart="30dp"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/lvl2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLvlsHeader"
        app:layout_constraintBottom_toTopOf="@id/lvl4"
        android:text="3"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lvl5"
        app:layout_constraintTop_toBottomOf="@id/lvl1"
        app:layout_constraintBottom_toTopOf="@id/lvl7"
        android:text="4"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/lvl4"
        app:layout_constraintEnd_toStartOf="@id/lvl6"
        app:layout_constraintTop_toBottomOf="@id/lvl1"
        app:layout_constraintBottom_toTopOf="@id/lvl7"
        android:text="5"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/lvl5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lvl1"
        app:layout_constraintBottom_toTopOf="@id/lvl7"
        android:text="6"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lvl8"
        app:layout_constraintTop_toBottomOf="@id/lvl4"
        app:layout_constraintBottom_toTopOf="@id/lvl10"
        android:text="7"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/lvl7"
        app:layout_constraintEnd_toStartOf="@id/lvl9"
        app:layout_constraintTop_toBottomOf="@id/lvl4"
        app:layout_constraintBottom_toTopOf="@id/lvl10"
        android:text="8"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/lvl8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lvl4"
        app:layout_constraintBottom_toTopOf="@id/lvl10"
        android:text="9"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lvl11"
        app:layout_constraintTop_toBottomOf="@id/lvl7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="10"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:layout_marginBottom="40dp"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/lvl10"
        app:layout_constraintEnd_toStartOf="@id/lvl12"
        app:layout_constraintTop_toBottomOf="@id/lvl7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="11"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:layout_marginBottom="40dp"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />

    <TextView
        android:id="@+id/lvl12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/lvl11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lvl7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="12"
        style="@style/tv_header"
        android:textColor="#0E4D99"
        android:background="@drawable/btn_lvl_non_complete"
        android:layout_marginBottom="40dp"
        android:shadowColor="@color/white"
        android:shadowDx="8"
        android:shadowRadius="4"
        />



</androidx.constraintlayout.widget.ConstraintLayout>